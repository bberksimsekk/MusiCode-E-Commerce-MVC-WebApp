@model MusiCodeWebApp.Areas.ManagerPanel.Data.ManagerLoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Yönetici Giriş</title>
    <link href="~/Areas/ManagerPanel/Assets/CSS/ManagerLogin.css" rel="stylesheet" />
</head>
<body>
    <div class="container"> 
        <div class="logo">
            <img src="~/Areas/ManagerPanel/Assets/Images/MusicodeLogo.png" />
        </div>
        @using (Html.BeginForm())
         {
            @Html.AntiForgeryToken()
            //Bu kullanım web uygulamalarında Cross-Site Request Forgery(CSRF) saldırılarını önlemek için geliştirilmiş güvenlik mekanizmasıdır.
            if (ViewBag.mesaj != null)
            {
                <div class="validation-summary-errors">
                    @ViewBag.mesaj
                </div>
            }
            @Html.ValidationSummary()
            <div>
                <div class="row">
                    @Html.EditorFor(x => x.Mail, new { htmlAttributes = new { @class="formTextBox", @placeholder="Mail Adresiniz" } })
                </div>
                <div class="row">
                    @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "formTextBox", @placeholder ="Şifreniz" } })
                </div>
                <div class="row">
                    @Html.EditorFor(x => x.RememberMe) <label for="RememberMe">Unutma Beni Cnm Bnm...</label>
                </div>
                <div class="row">
                    <input type="submit" value="Giriş Yap" class="loginButton" />
                </div>
            </div>
         }
    </div>
</body>
</html>
